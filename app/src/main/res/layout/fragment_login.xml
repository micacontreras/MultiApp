<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3A5A5"
    tools:context=".login.LoginFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="252dp"
        android:layout_height="136dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/reCaptchaButton"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:background="@color/colorAccent"
        android:backgroundTint="#F3F1F1"
        android:buttonTint="#E91E63"
        android:text="@string/are_you_human"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Alonso es mi gato"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/typeAuthentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="153dp"
        android:text="@string/choose_your_authentication_method"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeAuthentication">

        <RadioButton
            android:id="@+id/googleOption"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:drawableStart="@mipmap/google"
            android:text="@string/sign_in_with_google" />

        <RadioButton
            android:id="@+id/biometrics"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:drawableStart="@mipmap/fingerprint"
            android:text="@string/sign_in_with_biometric_authentication" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>